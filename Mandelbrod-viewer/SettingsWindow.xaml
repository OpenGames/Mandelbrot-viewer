<Window x:Name="SettingsWindow1" x:Class="OpenGames.MandelbrodViewer.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OpenGames.MandelbrodViewer"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="248.162" Width="501.838" ResizeMode="NoResize" WindowStyle="None" Background="#FF131418" KeyDown="SettingsWindow1_KeyDown" KeyUp="SettingsWindow1_KeyUp" MouseLeftButtonDown="SettingsWindow1_MouseLeftButtonDown" MouseLeftButtonUp="SettingsWindow1_MouseLeftButtonUp" MouseMove="SettingsWindow1_MouseMove">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="18px"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="BorderBrush" Value="#2c3e50"/>
            <Setter Property="Background" Value="#2c3e50"/>
            <Setter Property="Foreground" Value="#ecf0f1"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="Template">
                <!-- Removing standart triggers -->
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <!-- Setting it back to needed color-->
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#34495e"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#95a5a6"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="Label">
            <Setter Property="FontSize" Value="20px"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Foreground" Value="#ecf0f1"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="20px"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Foreground" Value="#ecf0f1"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="#131418"/>
            <Setter Property="BorderBrush" Value="#2980b9"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border x:Name="border" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
                            <ScrollViewer x:Name="PART_ContentHost" Focusable="false" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="true">
                    <Setter Property="BorderBrush" Value="#2980b9"/>
                </Trigger>
                <Trigger Property="IsFocused" Value="true">
                    <Setter Property="BorderBrush" Value="#3498db"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="FontSize" Value="12px"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="BorderBrush" Value="#2c3e50"/>
            <Setter Property="Background" Value="#2c3e50"/>
            <Setter Property="Foreground" Value="#ecf0f1"/>
            <Setter Property="LayoutTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1.5" ScaleY="1.5"></ScaleTransform>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Button Content="Accept" Margin="0,0,10,10" Width="120" Height="30" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
        <Button Content="OK" Margin="0,0,135,10" Width="120" Height="30" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="Button_Click"/>
        <Label Content="Width:" HorizontalAlignment="Left" Margin="10,19,0,0" VerticalAlignment="Top" Width="84"/>
        <TextBox Margin="99,23,10,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top"/>
        <Label Content="Height:" HorizontalAlignment="Left" Margin="10,61,0,0" VerticalAlignment="Top"/>
        <TextBox Margin="99,65,10,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top"/>
        <Label Content="Current Aspect ratio:" HorizontalAlignment="Left" Margin="10,103,0,0" VerticalAlignment="Top" Width="196"/>
        <TextBox HorizontalAlignment="Left" Margin="206,108,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="110"/>
        <Label Content="By" HorizontalAlignment="Left" Margin="321,103,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="372,108,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Label Content="Aspect ratio locked:" HorizontalAlignment="Left" Margin="10,145,0,0" VerticalAlignment="Top"/>
        <CheckBox Content="CheckBox" HorizontalAlignment="Left" Margin="207,154,0,0" VerticalAlignment="Top" Width="120"/>
    </Grid>
</Window>
